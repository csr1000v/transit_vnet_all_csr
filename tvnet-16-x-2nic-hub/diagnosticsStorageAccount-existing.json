{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "diagnosticsStorageAccountName": {
      "type": "string",
      "metadata": {
        "Description": "The name of the new storage account created to store the VMs disks"
      }
    },
    "diagnosticsStorageAccountType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS"
      ],
      "metadata": {
        "Description": "The type of the Storage Account created"
      },
      "defaultValue": "Standard_LRS"
    },
    "diagnosticsStorageAccountExistingRG": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "Description": "Resource Group Name of the existing Storage Account"
      }
    }
  },
  "resources": [
  ],
  "outputs": {
    "storageAccountId": {
      "value": "[reference(resourceId(parameters('diagnosticsStorageAccountExistingRG'),'Microsoft.Storage/StorageAccounts',parameters('diagnosticsStorageAccountName')), '2018-07-01').primaryEndpoints.blob]",
      "type": "string"
    }
  }
}
